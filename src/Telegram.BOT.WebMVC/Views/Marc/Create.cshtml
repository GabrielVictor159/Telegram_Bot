@using Telegram.BOT.WebMVC.UseCases.Category.GetCategory;
@using Telegram.BOT.WebMVC.UseCases.Marc.CreateMarc;
@model CreateMarcRequest
@{
    var urlPrefix = Environment.GetEnvironmentVariable("URL_PREFIX") ?? "";
}
<form action="@urlPrefix/Marc/CreateAction" class="validate" method="post">
    <h3>Criar Marca</h3>
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <label for="marc-name" class="form-label">Nome:</label>
                <input type="text" class="form-control" id="marc-name" asp-for="Name"/>
                <span class="invalid-feedback"></span>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <label for="marc-category" class="form-label">Categoria:</label>
                <select class="form-control" id="marc-category" asp-for="CategoryId">
                    <option></option>
                    @foreach(var item in (List<CategoryResponse>)ViewData["items"]) {
                        <option value="@item.id">@item.Name</option>
                    }
                </select>
                <span class="invalid-feedback"></span>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <input type="submit" class="btn btn-success" id="btn-submit" value="Criar" />
    </div>
</form>