@using Telegram.BOT.WebMVC.UseCases.Category.CreateCategory;
@model CreateCategoryRequest
@{
    var urlPrefix = Environment.GetEnvironmentVariable("URL_PREFIX") ?? "";
}
<form class="validate" action="@urlPrefix/Category/CreateAction" method="post">
    <h3>Criar Categoria</h3>
    <div class="mb-3">
        <label for="category-name" class="form-label">Nome:</label>
        <input type="text" class="form-control" id="category-name" asp-for="name" />
        <span class="invalid-feedback"></span>
    </div>
    <div class="d-flex justify-content-end">
        <input type="submit" class="btn btn-success" id="btn-submit" value="Criar" />
    </div>
</form>