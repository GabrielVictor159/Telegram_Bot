@using Telegram.BOT.WebMVC.UseCases.User.Login;
@model UserLoginResponse
@{
    var urlPrefix = Environment.GetEnvironmentVariable("URL_PREFIX") ?? "";
}
<div class="container d-flex justify-content-center align-items-center login-container">
    <form action="@urlPrefix/User/Login" method="post" class="card login validate">
        <div class="card-body">
            @if (Model.IsError) {
                <div class="alert alert-danger d-flex justify-content-center">@Model.ErrorMessage</div>
            }
            <div class="mb-3 d-flex justify-content-center">
                <h5 class="card-title ">Login</h5>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <img src="~/images/user.png" width="35%"/>  
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <div class="card-text"><b>Administrador</b></div>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control placeholder-center" id="pass" name="password" placeholder="Senha" />
                <span class="invalid-feedback"></span>
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" class="btn btn-success" id="send" value="Login"/>
            </div>
        </div> 
    </form>
</div>